{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple example extension",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.webp",
        "48": "icons/icon48.webp",
        "128": "icons/icon128.webp"
      }
    }
  }
  